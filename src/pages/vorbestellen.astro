---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import OrderForm from '../components/order/OrderForm';
---

<Layout 
  title="Spargel vorbestellen | Spargelhof Richter"
  description="Bestellen Sie frischen Spargel direkt vom Spargelhof Richter in Bad Laer. Einfach online vorbestellen und im Hofladen abholen."
>
  <Header />
  
  <main class="min-h-screen bg-cream pt-28 pb-20 relative overflow-hidden">
    <!-- Floating Asparagus SVG Illustrations -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
      <!-- Top Left Asparagus -->
      <svg class="absolute top-20 left-8 w-16 h-40 opacity-[0.08] animate-float-slow" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Top Right Asparagus (rotated) -->
      <svg class="absolute top-32 right-12 w-12 h-32 opacity-[0.06] animate-float-medium rotate-12" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Middle Left Asparagus -->
      <svg class="absolute top-1/3 -left-4 w-20 h-48 opacity-[0.05] animate-float-fast -rotate-6" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Middle Right Asparagus -->
      <svg class="absolute top-1/2 right-4 w-14 h-36 opacity-[0.07] animate-float-slow -rotate-12" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Bottom Left Asparagus -->
      <svg class="absolute bottom-32 left-16 w-10 h-28 opacity-[0.06] animate-float-medium rotate-6" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Bottom Right Asparagus -->
      <svg class="absolute bottom-48 right-20 w-18 h-44 opacity-[0.05] animate-float-fast rotate-3" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <ellipse cx="20" cy="32" rx="5" ry="5" fill="#4A7A2A"/>
        <rect x="15" y="35" width="10" height="80" rx="5" fill="#7B9E6B"/>
        <ellipse cx="20" cy="115" rx="5" ry="3" fill="#2D5016"/>
      </svg>

      <!-- Additional small asparagus tips scattered -->
      <svg class="absolute top-40 left-1/4 w-8 h-20 opacity-[0.04] animate-float-medium -rotate-15" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <rect x="15" y="25" width="10" height="40" rx="5" fill="#7B9E6B"/>
      </svg>

      <svg class="absolute bottom-1/4 right-1/3 w-6 h-16 opacity-[0.04] animate-float-slow rotate-20" viewBox="0 0 40 120" fill="none">
        <ellipse cx="20" cy="10" rx="8" ry="10" fill="#2D5016"/>
        <ellipse cx="20" cy="22" rx="6" ry="6" fill="#4A7A2A"/>
        <rect x="15" y="25" width="10" height="40" rx="5" fill="#7B9E6B"/>
      </svg>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero -->
      <div class="text-center mb-12">
        <span class="inline-block font-body text-primary font-semibold tracking-wider uppercase text-sm mb-4">
          Online Bestellung
        </span>
        <h1 class="font-display text-4xl lg:text-5xl text-brown mb-4">
          Spargel <span class="text-primary">vorbestellen</span>
        </h1>
        <p class="text-brown-light font-body text-lg max-w-2xl mx-auto">
          Jetzt vorbestellen und ganz einfach in unserem Hofladen abholen. 
          Wir bereiten Ihre Bestellung frisch f√ºr Sie vor.
        </p>
      </div>

      <!-- Order Form -->
      <OrderForm client:load />
    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px) rotate(var(--rotation, 0deg));
    }
    50% {
      transform: translateY(-15px) rotate(var(--rotation, 0deg));
    }
  }

  @keyframes float-medium {
    0%, 100% {
      transform: translateY(0px) rotate(var(--rotation, 0deg));
    }
    50% {
      transform: translateY(-10px) rotate(var(--rotation, 0deg));
    }
  }

  @keyframes float-fast {
    0%, 100% {
      transform: translateY(0px) rotate(var(--rotation, 0deg));
    }
    50% {
      transform: translateY(-8px) rotate(var(--rotation, 0deg));
    }
  }

  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: float-medium 4s ease-in-out infinite;
  }

  .animate-float-fast {
    animation: float-fast 3s ease-in-out infinite;
  }
</style>
