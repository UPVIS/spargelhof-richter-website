---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'Facebook',
    href: 'https://facebook.com/spargelhofrichter',
    icon: `<path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>`
  },
  {
    name: 'Instagram',
    href: 'https://instagram.com/spargelhof_richter',
    icon: `<rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>`
  },
  {
    name: 'YouTube',
    href: 'https://youtube.com/@spargelhofrichter',
    icon: `<path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>`
  }
];
---

<footer class="bg-brown text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img 
            src="https://onecdn.io/media/06b81210-7944-4581-8eb5-2a222c4fdadd/md2x" 
            alt="Spargelhof Richter Logo"
            class="h-16 w-auto"
          />
        </a>
        <p class="text-white/60 font-body text-sm mb-6">
          Frischer Spargel und Erdbeeren direkt vom Feld – seit 1991 mit Leidenschaft.
        </p>
        <!-- Social Links -->
        <div class="flex gap-3">
          {socialLinks.map(link => (
            <a 
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-primary transition-colors"
              aria-label={link.name}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <Fragment set:html={link.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-display text-lg mb-4">Navigation</h4>
        <ul class="space-y-3 font-body text-sm">
          <li>
            <a href="/#ueber-uns" class="text-white/60 hover:text-white transition-colors">Über uns</a>
          </li>
          <li>
            <a href="/#frischegarantie" class="text-white/60 hover:text-white transition-colors">24h Frischegarantie</a>
          </li>
          <li>
            <a href="/#hofladen" class="text-white/60 hover:text-white transition-colors">Hofladen</a>
          </li>
          <li>
            <a href="/#galerie" class="text-white/60 hover:text-white transition-colors">Galerie</a>
          </li>
          <li>
            <a href="/#kontakt" class="text-white/60 hover:text-white transition-colors">Kontakt</a>
          </li>
        </ul>
      </div>

      <!-- Products -->
      <div>
        <h4 class="font-display text-lg mb-4">Produkte</h4>
        <ul class="space-y-3 font-body text-sm">
          <li>
            <span class="text-white/30 cursor-not-allowed">Spargel bestellen <span class="text-xs">(Coming soon)</span></span>
          </li>
          <li>
            <span class="text-white/60">Weißer Spargel</span>
          </li>
          <li>
            <span class="text-white/60">Violetter Spargel</span>
          </li>
          <li>
            <span class="text-white/60">Grünspargel</span>
          </li>
          <li>
            <span class="text-white/60">Erdbeeren</span>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display text-lg mb-4">Kontakt</h4>
        <ul class="space-y-3 font-body text-sm">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-white/60">
              Warendorfer Str. 40<br/>
              49196 Bad Laer
            </span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:054247734" class="text-white/60 hover:text-white transition-colors">05424 7734</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href="mailto:info@spargelhof-richter.de" class="text-white/60 hover:text-white transition-colors text-xs">info@spargelhof-richter.de</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-white/40 text-sm font-body text-center md:text-left">
          © {currentYear} Spargelhof Richter. Alle Rechte vorbehalten.
        </p>
        <div class="flex gap-6 font-body text-sm">
          <a href="/impressum" class="text-white/40 hover:text-white transition-colors">Impressum</a>
          <a href="/datenschutz" class="text-white/40 hover:text-white transition-colors">Datenschutz</a>
        </div>
      </div>
    </div>
  </div>
</footer>
