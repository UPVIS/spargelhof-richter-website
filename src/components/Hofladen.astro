---
const products = [
  {
    name: 'Weißer Spargel',
    description: 'Der Klassiker – zart und mild im Geschmack',
    badge: 'Bestseller',
    image: 'https://images.unsplash.com/photo-1515471209610-dae1c92d8777?w=400&h=300&fit=crop'
  },
  {
    name: 'Violetter Spargel',
    description: 'Intensiver und würziger als der weiße',
    badge: 'Beliebt',
    image: 'https://images.unsplash.com/photo-1432139555190-58524dae6a55?w=400&h=300&fit=crop'
  },
  {
    name: 'Grünspargel',
    description: 'Kräftig im Geschmack, schnell zubereitet',
    badge: null,
    image: 'https://images.unsplash.com/photo-1506807803488-8eafc15316c7?w=400&h=300&fit=crop'
  },
  {
    name: 'Frische Erdbeeren',
    description: 'Süß, saftig und direkt vom Feld',
    badge: 'Saison',
    image: 'https://images.unsplash.com/photo-1464965911861-746a04b4bca6?w=400&h=300&fit=crop'
  }
];
---

<section id="hofladen" class="py-24 lg:py-32 bg-cream-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-16">
      <div class="scroll-animate">
        <span class="inline-block font-body text-accent font-semibold tracking-wider uppercase text-sm mb-4">
          Unser Sortiment
        </span>
        <h2 class="font-display text-4xl lg:text-5xl text-brown">
          Besuchen Sie unseren <span class="text-primary">Hofladen</span>
        </h2>
      </div>
      <div class="scroll-animate" style="transition-delay: 100ms;">
        <a 
          href="/vorbestellen"
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-full transition-all hover:shadow-lg"
        >
          Zum Bestellformular
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Products Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {products.map((product, index) => (
        <div 
          class="scroll-animate group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2"
          style={`transition-delay: ${index * 100}ms;`}
        >
          <div class="relative aspect-[4/3] overflow-hidden">
            <img 
              src={product.image}
              alt={product.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            {product.badge && (
              <span class="absolute top-4 left-4 bg-accent text-white text-xs font-semibold px-3 py-1 rounded-full">
                {product.badge}
              </span>
            )}
          </div>
          <div class="p-6">
            <h3 class="font-display text-xl text-brown mb-2 group-hover:text-primary transition-colors">
              {product.name}
            </h3>
            <p class="text-brown-light font-body text-sm">{product.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Info Box -->
    <div class="mt-16 scroll-animate">
      <div class="bg-white rounded-2xl p-8 lg:p-12 shadow-lg">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="font-display text-2xl lg:text-3xl text-brown mb-4">
              Unser Hofladen vor Ort
            </h3>
            <p class="text-brown-light font-body text-lg mb-6">
              Besuchen Sie unseren Hofladen gleich vor Ort und entdecken Sie unser gesamtes 
              Frische-Sortiment. Wir freuen uns auf Sie!
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="tel:054247734"
                class="inline-flex items-center gap-3 text-brown hover:text-primary transition-colors"
              >
                <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <span class="font-semibold">05424 7734</span>
              </a>
              <a 
                href="mailto:info@spargelhof-richter.de"
                class="inline-flex items-center gap-3 text-brown hover:text-primary transition-colors"
              >
                <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <span class="font-semibold">E-Mail schreiben</span>
              </a>
            </div>
          </div>
          <div class="bg-cream rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-display text-lg text-brown mb-2">Adresse</h4>
                <p class="text-brown-light font-body">
                  Warendorfer Str. 40<br/>
                  49196 Bad Laer
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
