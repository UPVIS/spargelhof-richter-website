<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- YouTube Video Background -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <div class="absolute inset-0 bg-primary/60 z-10"></div>
    <iframe 
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[200%] h-[200%] min-w-full min-h-full pointer-events-none"
      src="https://www.youtube.com/embed/j4PG5rS9YDY?autoplay=1&mute=1&controls=0&loop=1&playlist=j4PG5rS9YDY&start=18&playsinline=1&showinfo=0&rel=0&modestbranding=1"
      title="Spargelhof Richter Video"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
    <!-- Fallback Image -->
    <img 
      src="https://onecdn.io/unsplash/q5uH1-j2sZM/lg2x"
      alt="Spargelhof Richter"
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center pt-20">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8 animate-fade-in">
      <span class="w-2 h-2 bg-accent rounded-full animate-pulse"></span>
      <span class="text-white/90 font-body text-sm">Frisch vom Feld â€“ Saison 2026</span>
    </div>

    <!-- Main Heading -->
    <h1 class="font-display text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-white mb-6 animate-fade-in-up">
      Der Spargel mit
      <span class="block mt-2 text-accent">Frischegarantie!</span>
    </h1>

    <!-- Subtitle -->
    <p class="font-body text-xl sm:text-2xl text-white/80 max-w-2xl mx-auto mb-10 animate-fade-in-up delay-200">
      Willkommen beim Spargelhof Richter in Bad Laer. 
      Frischer Spargel & Erdbeeren direkt vom Feld zu Ihnen.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up delay-300">
      <a 
        href="/vorbestellen"
        class="group inline-flex items-center gap-3 bg-accent hover:bg-accent-light text-white font-semibold px-8 py-4 rounded-full transition-all hover:shadow-2xl hover:-translate-y-1"
      >
        <svg class="w-6 h-6 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Jetzt Spargel vorbestellen
      </a>
      <a 
        href="https://www.youtube.com/watch?v=j4PG5rS9YDY"
        target="_blank"
        rel="noopener noreferrer"
        class="group inline-flex items-center gap-2 text-white hover:text-accent font-semibold px-6 py-4 transition-colors"
      >
        <svg class="w-12 h-12 border-2 border-white/30 rounded-full p-3 group-hover:border-accent group-hover:bg-accent/10 transition-all" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
        </svg>
        Schau dir unseren Film an
      </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-8 max-w-3xl mx-auto mt-20 animate-fade-in-up delay-400">
      <div class="text-center">
        <div class="font-display text-4xl sm:text-5xl text-white mb-2">24h</div>
        <div class="text-white/60 font-body text-sm sm:text-base">Frischegarantie</div>
      </div>
      <div class="text-center border-x border-white/20">
        <div class="font-display text-4xl sm:text-5xl text-white mb-2">1991</div>
        <div class="text-white/60 font-body text-sm sm:text-base">Familientradition</div>
      </div>
      <div class="text-center">
        <div class="font-display text-4xl sm:text-5xl text-white mb-2">100%</div>
        <div class="text-white/60 font-body text-sm sm:text-base">Regional</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
    <a href="#ueber-uns" class="block text-white/60 hover:text-white transition-colors">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </a>
  </div>

  <!-- Wave Divider -->
  <div class="absolute bottom-0 left-0 right-0 z-20">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="#FAF8F5"/>
    </svg>
  </div>
</section>
