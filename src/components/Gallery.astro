const galerieImages = [
  {
    src: 'https://onecdn.io/media/6a8e7882-56ed-459b-8377-24b699a342f6/lg2x',
    alt: 'Spargelfeld'
  },
  {
    src: 'https://onecdn.io/media/c4e49a93-ec5d-4e02-88bf-d364a5e18e20/lg2x',
    alt: 'Spargelernte'
  },
  {
    src: 'https://onecdn.io/media/ad7dc0ab-843b-43b5-924b-aeba6abbea9a/lg2x',
    alt: 'Unser Betrieb'
  },
  {
    src: 'https://onecdn.io/media/3d809249-7b33-4d91-bbdd-15a588fc6009/lg2x',
    alt: 'Unsere Produkte'
  },
  {
    src: 'https://onecdn.io/media/063cb2ac-1185-45c8-a9ad-0795cbf2d4ff/lg2x',
    alt: 'Unser Team'
  },
  {
    src: 'https://onecdn.io/media/e25f5c69-2c0c-468e-b0ba-40aeb34bb8ff/lg2x',
    alt: 'Frischer Spargel'
  }
];

const instagramImages = [
  { src: 'https://onecdn.io/media/06efa8ae-f02e-43d6-ad55-3142acca75fc/lg2x', alt: 'Instagram 1' },
  { src: 'https://onecdn.io/media/96aa632b-93db-4900-908d-af97bd62205f/lg2x', alt: 'Instagram 2' },
  { src: 'https://onecdn.io/media/e4b14b21-af81-4a6b-8151-0d59fb28a283/lg2x', alt: 'Instagram 3' },
  { src: 'https://onecdn.io/media/72320ffe-6b76-4aff-8e12-1291777169b7/lg2x', alt: 'Instagram 4' },
  { src: 'https://onecdn.io/media/1e33b7af-785e-4de0-bd76-e40307b3b01e/lg2x', alt: 'Instagram 5' },
];
---

<section id="galerie" class="py-24 lg:py-32 bg-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-12 scroll-animate">
      <span class="inline-block font-body text-primary font-semibold tracking-wider uppercase text-sm mb-4">
        Einblicke
      </span>
      <h2 class="font-display text-4xl lg:text-5xl text-brown mb-6">
        Ein Einblick in unseren <span class="text-primary">Betrieb</span>
      </h2>
      <p class="text-brown-light font-body text-lg">
        Erleben Sie die Leidenschaft und Sorgfalt, mit der wir jeden Tag arbeiten.
      </p>
    </div>

    <!-- Kompaktes Gallery Grid - 3x2 -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-16">
      {galerieImages.map((image, index) => (
        <div 
          class="scroll-animate group relative overflow-hidden rounded-xl aspect-square"
          style={`transition-delay: ${index * 80}ms;`}
        >
          <img 
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-brown/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-4 left-4 right-4">
              <p class="text-white font-body text-sm font-medium">{image.alt}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Instagram Section -->
    <div class="scroll-animate bg-white rounded-2xl p-8 shadow-lg">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <h3 class="font-display text-2xl text-brown">
          Folge uns auf <span class="text-primary">Instagram</span>
        </h3>
        <a 
          href="https://instagram.com/spargelhof_richter"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-600 via-pink-500 to-orange-400 text-white font-semibold px-6 py-3 rounded-full hover:shadow-lg transition-all text-sm"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          @spargelhof_richter
        </a>
      </div>

      <!-- Instagram Grid - horizontale Leiste -->
      <div class="grid grid-cols-5 gap-3">
        {instagramImages.map((image, index) => (
          <a 
            href="https://instagram.com/spargelhof_richter"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative aspect-square overflow-hidden rounded-lg"
          >
            <img 
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/40 transition-colors duration-300 flex items-center justify-center">
              <svg class="w-6 h-6 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
