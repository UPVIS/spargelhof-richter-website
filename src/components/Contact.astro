<section id="kontakt" class="py-24 lg:py-32 bg-cream-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 scroll-animate">
      <span class="inline-block font-body text-accent font-semibold tracking-wider uppercase text-sm mb-4">
        Kontakt
      </span>
      <h2 class="font-display text-4xl lg:text-5xl text-brown mb-6">
        So erreichen Sie <span class="text-primary">uns</span>
      </h2>
      <p class="text-brown-light font-body text-lg">
        Sie haben Fragen zu unseren Produkten oder möchten eine Bestellung aufgeben? 
        Wir sind gerne für Sie da!
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="scroll-animate">
        <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-lg">
          <h3 class="font-display text-2xl text-brown mb-6">Schreiben Sie uns</h3>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block font-body text-sm font-medium text-brown mb-2">
                Name <span class="text-accent">*</span>
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 rounded-xl border border-cream-dark focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all font-body"
                placeholder="Ihr vollständiger Name"
              />
            </div>
            <div>
              <label for="email" class="block font-body text-sm font-medium text-brown mb-2">
                E-Mail <span class="text-accent">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 rounded-xl border border-cream-dark focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all font-body"
                placeholder="ihre@email.de"
              />
            </div>
            <div>
              <label for="message" class="block font-body text-sm font-medium text-brown mb-2">
                Nachricht <span class="text-accent">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 rounded-xl border border-cream-dark focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all font-body resize-none"
                placeholder="Ihre Nachricht an uns..."
              ></textarea>
            </div>
            <button 
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white font-semibold py-4 rounded-xl transition-all hover:shadow-lg flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Kontaktanfrage senden
            </button>
          </form>
        </div>
      </div>

      <!-- Contact Info & Map -->
      <div class="scroll-animate" style="transition-delay: 200ms;">
        <div class="space-y-8">
          <!-- Contact Cards -->
          <div class="grid sm:grid-cols-2 gap-4">
            <a 
              href="tel:054247734"
              class="group bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all hover:-translate-y-1"
            >
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <h4 class="font-display text-lg text-brown mb-1">Telefon</h4>
              <p class="text-primary font-semibold">05424 7734</p>
            </a>

            <a 
              href="mailto:info@spargelhof-richter.de"
              class="group bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all hover:-translate-y-1"
            >
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h4 class="font-display text-lg text-brown mb-1">E-Mail</h4>
              <p class="text-primary font-semibold text-sm">info@spargelhof-richter.de</p>
            </a>
          </div>

          <!-- Address Card -->
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-display text-lg text-brown mb-2">Besuchen Sie uns</h4>
                <p class="text-brown-light font-body">
                  Spargelhof Richter<br/>
                  Warendorfer Str. 40<br/>
                  49196 Bad Laer
                </p>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div class="bg-white rounded-xl overflow-hidden shadow-lg h-64 lg:h-80">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2450.1234567890123!2d8.0833!3d52.1000!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTLCsDA2JzAwLjAiTiA4wrAwNScwMC4wIkU!5e0!3m2!1sde!2sde!4v1234567890123"
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="Standort Spargelhof Richter"
              class="grayscale hover:grayscale-0 transition-all duration-500"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    // Here you would typically send to an API
    console.log('Form submitted:', data);
    alert('Vielen Dank für Ihre Nachricht! Wir melden uns schnellstmöglich bei Ihnen.');
    (form as HTMLFormElement).reset();
  });
</script>
