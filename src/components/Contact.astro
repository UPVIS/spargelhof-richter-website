---
const openingHours = [
  { day: 'Montag - Freitag', hours: '8:00 - 19:00 Uhr' },
  { day: 'Samstag', hours: '8:00 - 18:00 Uhr' },
  { day: 'Sonntag', hours: '9:00 - 12:00 Uhr' }
];
---

<section id="kontakt" class="bg-cream-dark">
  <!-- Kontaktbereich -->
  <div class="py-20 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center max-w-3xl mx-auto mb-16 scroll-animate">
        <span class="inline-block font-body text-primary font-semibold tracking-wider uppercase text-sm mb-4">
          Kontakt
        </span>
        <h2 class="font-display text-4xl lg:text-5xl text-brown mb-6">
          So erreichen Sie <span class="text-primary">uns</span>
        </h2>
        <p class="text-brown-light font-body text-lg max-w-xl mx-auto">
          Sie haben Fragen zu unseren Produkten oder möchten eine Bestellung aufgeben? 
          Wir sind gerne für Sie da!
        </p>
      </div>

      <!-- Prominente Kontakt-Aktionen -->
      <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto mb-12">
        <!-- Jetzt anrufen -->
        <a 
          href="tel:054247734"
          class="scroll-animate group bg-primary hover:bg-primary-dark rounded-2xl p-8 text-white text-center transition-all hover:shadow-xl hover:-translate-y-1"
        >
          <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-5 group-hover:bg-white/30 transition-colors">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl mb-2">Rufen Sie uns an</h3>
          <p class="text-white/70 font-body text-sm mb-4">Wir beraten Sie gerne persönlich</p>
          <span class="inline-flex items-center gap-2 font-display text-2xl">
            05424 7734
          </span>
        </a>

        <!-- E-Mail schreiben -->
        <a 
          href="mailto:info@spargelhof-richter.de"
          class="scroll-animate group bg-white hover:bg-cream rounded-2xl p-8 text-brown text-center shadow-lg transition-all hover:shadow-xl hover:-translate-y-1"
          style="transition-delay: 100ms;"
        >
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-5 group-hover:bg-primary/20 transition-colors">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl mb-2">Schreiben Sie uns</h3>
          <p class="text-brown-light font-body text-sm mb-4">Wir antworten schnellstmöglich</p>
          <span class="inline-flex items-center gap-2 font-display text-lg text-primary group-hover:text-primary-dark transition-colors">
            info@spargelhof-richter.de
          </span>
        </a>
      </div>

      <!-- Adresse & Öffnungszeiten -->
      <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto mb-12">
        <!-- Adresse -->
        <a 
          href="https://maps.google.com/?q=Warendorfer+Str.+40,+49196+Bad+Laer"
          target="_blank"
          rel="noopener noreferrer"
          class="scroll-animate group bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 flex items-start gap-5"
          style="transition-delay: 200ms;"
        >
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-primary transition-colors">
            <svg class="w-7 h-7 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-display text-lg text-brown mb-1">Besuchen Sie uns</h3>
            <p class="text-brown-light font-body text-sm mb-2">
              Warendorfer Str. 40<br/>
              49196 Bad Laer
            </p>
            <span class="text-primary font-body text-sm font-semibold group-hover:text-primary-dark transition-colors">
              Route berechnen &rarr;
            </span>
          </div>
        </a>

        <!-- Öffnungszeiten -->
        <div class="scroll-animate bg-primary rounded-2xl p-6 text-white" style="transition-delay: 300ms;">
          <div class="flex items-start gap-5">
            <div class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-lg mb-3">Öffnungszeiten</h3>
              <div class="space-y-2">
                {openingHours.map((item) => (
                  <div class="flex justify-between text-sm">
                    <span class="text-white/70">{item.day}</span>
                    <span class="font-medium">{item.hours}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Coming Soon Vorbestellen -->
      <div class="scroll-animate text-center">
        <div class="inline-flex flex-col items-center gap-2">
          <span 
            class="inline-flex items-center gap-3 bg-brown/20 text-brown/50 font-semibold px-8 py-4 rounded-full cursor-not-allowed select-none"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Jetzt Spargel vorbestellen
          </span>
          <span class="text-brown/40 font-body text-sm">Coming soon &ndash; sobald die Saison startet</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Karte in voller Breite -->
  <div class="w-full h-[400px] lg:h-[500px]">
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2461.123456789!2d8.0983333!3d52.0983333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47ba1f8e12345678%3A0x1234567890abcdef!2sWarendorfer%20Str.%2040%2C%2049196%20Bad%20Laer!5e0!3m2!1sde!2sde!4v1700000000000!5m2!1sde!2sde"
      class="w-full h-full border-0"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="Spargelhof Richter Standort"
    ></iframe>
  </div>
</section>
